[BuildPrepare]
prepareBuild

[BuildUnprepare]
unprepareBuild

[Globals]
# export MY_VAR=1

[Imports]
echo '*' | import

[Prepare]
require @wxwidgets.org/wxgtk 28
removeOwningPackage $PREFIX/bin/Agender

[Install]
installExe bin/*
installMenuItem "Calendar/Utility" share/applications/*
installIcon share/pixmaps/*
installLocale share/locale/

[Uninstall]
uninstallFromLog
